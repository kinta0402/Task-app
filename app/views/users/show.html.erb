<% provide(:title, @user.name) %>

<h1>プロフィール</h1>

<div class="col-md-6 col-md-offset-3">
  <table class="table table-bordered" id="table-user">
    <tbody>
      <tr>
        <th class="active col-md-3">ID</th>
        <td class="col-sm-10"><%= @user.id %></td>
      </tr>    
      <tr>
        <th class="active col-md-3">名前</th>
        <td class="col-md-10"><%= @user.name %></td>
      </tr>
      <tr>
        <th class="active col-md-3">メールアドレス</th>
        <td class="col-md-10"><%= @user.email %></td>
      </tr>
      <tr>
        <th class="active col-md-3">作成日</th>
        <td class="col-md-10"><%= l @user.created_at, format: :long %></td>
      </tr>
    </tbody>
  </table>
</div>