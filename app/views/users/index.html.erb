<% provide(:title, "Users") %>

<h1>利用者一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate @users, :previous_label => ' &lt 前へ', :next_label => '次へ &gt'  %>
    <table class="table table-condensed table-hover" id="table-users">
      <thead>
        <tr>
          <th>名前</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user.name, user %>
          </td>
          <td>
            <%= link_to "削除", user_path(user), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @users, :previous_label => ' &lt 前へ', :next_label => '次へ &gt'  %>
  </div>
</div>